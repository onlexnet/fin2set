<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>onlexnet.fin2set</groupId>
  <artifactId>webapi-build</artifactId>
  <version>${revision}</version>
  <packaging>pom</packaging>

  <properties>
  </properties>

  <modules>
    <module>build-tools</module>
    <module>base</module>
    <module>host</module>
    <module>gql-model</module> <!-- Shared GraphQL models between gql-test and host modules -->
  </modules>


  <build>
    <plugins>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>flatten-maven-plugin</artifactId>
        <version>1.1.0</version>
        <configuration>
          <updatePomFile>true</updatePomFile>
          <flattenMode>resolveCiFriendliesOnly</flattenMode>
        </configuration>
        <executions>
          <execution>
            <id>flatten</id>
            <phase>process-resources</phase>
            <goals>
              <goal>flatten</goal>
            </goals>
          </execution>
          <execution>
            <id>flatten.clean</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
</project>
