// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Java",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "true",
			"installGradle": "false"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",

	// https://stackoverflow.com/a/75644266
	"mounts": [
		"type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/vscode/.ssh"
	],
		
	
	"customizations": {
		"vscode": {
			// Set of my favourite extensions
			"extensions": [
				"vscjava.vscode-java-pack", // everything I need to support java
				"zxh404.vscode-proto3", // we use proto3 to create interprocess brokerless communication
				"ms-azuretools.vscode-dapr", // DAPR is used for uservices
				"shengchen.vscode-checkstyle",
				"editorconfig.editorconfig",
				"ms-azuretools.vscode-dapr",
				"vscjava.vscode-java-dependency",
				"visualstudioexptteam.vscodeintellicode",
				"cucumberopen.cucumber-official",
				"vmware.vscode-boot-dev-pack",
				"github.vscode-pull-request-github",
        		"redhat.vscode-xml" // to format pom.xml
			]
		}
	}
	
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
